<Window x:Class="QuangKietWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:QuangKietWPF.ViewModels"
        Title="FU Mini Hotel System - Login" Height="500" Width="800" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    
    <Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Side - Hotel Image -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4CAF50" Offset="0"/>
                    <GradientStop Color="#2E7D32" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.1"/>
                </Grid.Background>
                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="Welcome to" Foreground="White" FontSize="24" FontWeight="Light" Margin="0,0,0,10"/>
                    <TextBlock Text="FU Mini Hotel System" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBlock Text="Your premium hotel management solution" Foreground="White" FontSize="16" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Right Side - Login Form -->
        <Border Grid.Column="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1B5E20" Offset="0"/>
                    <GradientStop Color="#0A2F0A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="50,0">
                    <TextBlock Text="LOGIN" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Email" Foreground="#aaa" FontSize="12" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource TextBoxStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBlock Text="Password" Foreground="#aaa" FontSize="12" Margin="0,20,0,0"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource PasswordBoxStyle}"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#e74c3c" TextWrapping="Wrap" Margin="0,20,0,20"/>
                    
                    <Button Content="LOG IN" Style="{StaticResource RoundedButtonStyle}" Margin="0,10,0,10" Width="200">
                        <Button.CommandParameter>
                            <Binding ElementName="txtPassword"/>
                        </Button.CommandParameter>
                        <Button.Command>
                            <Binding Path="LoginCommand"/>
                        </Button.Command>
                    </Button>
                    
                    <Button Content="CANCEL" Margin="0,10,0,0" Width="200" Command="{Binding CancelCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
                                <Setter Property="Background" Value="#8BC34A"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#689F38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <TextBlock Text="Â© 2025 FU Mini Hotel System" Foreground="#aaa" FontSize="10" Margin="0,40,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 